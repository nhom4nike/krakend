{
    "version": 2,
  
    "endpoints": [
    {
        "endpoint": "/iam",
        "extra_config": {
           
            "github.com/devopsfaith/krakend/proxy": {
                "sequential": true
            }
        },
        "backend":
        [{
            "host": [
                "http://localhost:3001/"
            ],
            "extra_config": {
                "github.com/devopsfaith/krakend/http": {
                    "return_error_details": "backend_iam"
                }
            }
        },{
            "host": [
                "http://localhost:3000/"
            ],
            "extra_config": {
                "github.com/devopsfaith/krakend/http": {
                    "return_error_details": "backend_b"
                }
            }
        }
        
        ]
        
    }]
}